---
import Layout from "../layouts/Layout.astro";
import { projects } from "../lib/data";
import Separator from "../components/ui/Separator";

const sortedProjects = [...projects].sort((a, b) => a.rank - b.rank);

const title = "Projects - Mohamed Yessine Bouajila";
const description = "A collection of my work, showcasing my expertise in building accessible, high-performance web applications.";
---

<Layout title={title} description={description}>
  <main class="min-h-dvh max-w-3xl mx-auto px-6">
    <section class="pt-20 pb-10">
      <h1 class="text-4xl font-bold tracking-tight mb-4">Projects</h1>
      <p class="text-slate-600 dark:text-slate-400 leading-relaxed max-w-lg">
        A collection of my work, showcasing my expertise in building accessible, high-performance web applications.
      </p>
    </section>

    <section class="py-12">
      <div class="space-y-16">
        {sortedProjects.map((project, index) => (
          <div key={project.id}>
            {index !== 0 && <Separator variant="component" />}
            <div class="project-card space-y-4">
              {project.image && (
                <div class="aspect-video bg-slate-50 dark:bg-slate-900/40 rounded border border-slate-100 dark:border-slate-900 overflow-hidden">
                  <img
                    src={`/projectImages/${project.image}`}
                    alt={`${project.title} preview`}
                    class="w-full h-full object-cover"
                  />
                </div>
              )}
              <div class="space-y-3">
                <div class="flex items-center justify-between gap-4">
                  <h3 class="text-xl font-bold tracking-tight">{project.title}</h3>
                  <div class="flex gap-1.5">
                    {project.github && (
                      <a
                        href={project.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Source Code"
                        class="flex items-center justify-center w-8 h-8 rounded-full border border-slate-200 dark:border-slate-800 text-slate-500 hover:text-slate-950 dark:hover:text-white hover:bg-slate-50 dark:hover:bg-slate-900 transition-all"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/></svg>
                      </a>
                    )}
                    {project.demo && (
                      <a
                        href={project.demo}
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Visit Website"
                        class="flex items-center justify-center w-8 h-8 rounded-full border border-slate-200 dark:border-slate-800 text-slate-500 hover:text-slate-950 dark:hover:text-white hover:bg-slate-50 dark:hover:bg-slate-900 transition-all"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" x2="21" y1="14" y2="3"/></svg>
                      </a>
                    )}
                  </div>
                </div>
                <p class="text-slate-600 dark:text-slate-400 leading-relaxed text-sm">
                  {project.description}
                </p>
                <div class="flex flex-wrap gap-1.5">
                  {project.tech.map((tech) => (
                    <span
                      key={tech}
                      class="text-[9px] font-bold border border-slate-200 dark:border-slate-800 px-2 py-0.5 rounded text-slate-500 uppercase tracking-tight"
                    >
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>
